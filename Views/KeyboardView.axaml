<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:GetStartedApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="GetStartedApp.Views.KeyboardView"
        Title="On-Screen Keyboard"
        Background="#1a1a1a"
        WindowStartupLocation="CenterScreen">

    <Viewbox Stretch="Uniform" x:Name="KeyboardContainer">
    <StackPanel Background="#1a1a1a" Margin="20" Spacing="8" VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
        <!-- Main Keyboard -->
        <StackPanel Background="#1a1a1a" Spacing="6" Width="1050">
            
            <!-- Row 1: Function Keys + Premium Keys -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Margin="0,0,0,5" Width="1050">
                <Button Classes="key-fn" Content="Esc" Click="KeyButton_Click"/>
                <Separator Width="6" Background="Transparent"/>
                <Button Classes="key-fn" Content="F1" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F2" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F3" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F4" Click="KeyButton_Click"/>
                <Separator Width="6" Background="Transparent"/>
                <Button Classes="key-fn" Content="F5" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F6" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F7" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F8" Click="KeyButton_Click"/>
                <Separator Width="6" Background="Transparent"/>
                <Button Classes="key-fn" Content="F9" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F10" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F11" Click="KeyButton_Click"/>
                <Button Classes="key-fn" Content="F12" Click="KeyButton_Click"/>
            </StackPanel>

            <!-- Row 2: Numbers -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Width="1050">
                <Button Classes="key-std" Content="`" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="1" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="2" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="3" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="4" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="5" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="6" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="7" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="8" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="9" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="0" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="-" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="=" Click="KeyButton_Click"/>
                <Button Classes="key-backspace" Content="Backspace" Click="Backspace_Click"/>
            </StackPanel>

            <!-- Row 3: Tab + QWERTY -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Width="1050">
                <Button Classes="key-tab" Content="Tab" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="Q" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="W" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="E" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="R" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="T" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="Y" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="U" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="I" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="O" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="P" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="[" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="]" Click="KeyButton_Click"/>
                <Button Classes="key-backslash" Content="\" Click="SpecialKey_Click"/>
            </StackPanel>

            <!-- Row 4: Caps + ASDF -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Width="1050">
                <Button Classes="key-caps" Content="Caps" Click="ToggleCaps_Click"/>
                <Button Classes="key-std" Content="A" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="S" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="D" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="F" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="G" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="H" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="J" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="K" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="L" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content=";" Click="SpecialKey_Click"/>
                <Button Classes="key-std" Content="'" Click="SpecialKey_Click"/>
                <Button Classes="key-enter" Content="Enter" Click="Enter_Click"/>
            </StackPanel>

            <!-- Row 5: Shift + ZXCV -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Width="1050">
                <Button Classes="key-shift" Content="Shift" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="Z" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="X" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="C" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="V" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="B" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="N" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="M" Click="KeyButton_Click"/>
                <Button Classes="key-std" Content="," Click="SpecialKey_Click"/>
                <Button Classes="key-std" Content="." Click="SpecialKey_Click"/>
                <Button Classes="key-std" Content="/" Click="SpecialKey_Click"/>
                <Button Classes="key-shift" Content="Shift" Click="KeyButton_Click"/>
            </StackPanel>

            <!-- Row 6: Space bar row -->
            <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Left" Width="1050">
                <Button Classes="key-ctrl" Content="Ctrl" Click="KeyButton_Click"/>
                <Button Classes="key-ctrl" Content="Win" Click="KeyButton_Click"/>
                <Button Classes="key-ctrl" Content="Alt" Click="KeyButton_Click"/>
                <Button Classes="key-space" Content="Space" Click="Space_Click"/>
                <Button Classes="key-ctrl" Content="Alt" Click="KeyButton_Click"/>
                <Button Classes="key-ctrl" Content="Fn" Click="KeyButton_Click"/>
                <Button Classes="key-ctrl" Content="Menu" Click="KeyButton_Click"/>
                <Button Classes="key-ctrl" Content="Ctrl" Click="KeyButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Navigation and Operator Keys Panel -->
        <StackPanel Spacing="6" Margin="20,0,0,0">
            <!-- Navigation row 1: PS, SL, PB -->
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Classes="key-nav" Content="PS" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="SL" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="PB" Click="SpecialKey_Click"/>
            </StackPanel>

            <!-- Navigation row 2: INS, HM, PU -->
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Classes="key-nav" Content="INS" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="HM" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="PU" Click="SpecialKey_Click"/>
            </StackPanel>

            <!-- Navigation row 3: DEL, END, PD -->
            <StackPanel Orientation="Horizontal" Spacing="5">
                <Button Classes="key-nav" Content="DEL" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="END" Click="SpecialKey_Click"/>
                <Button Classes="key-nav" Content="PD" Click="SpecialKey_Click"/>
            </StackPanel>

            <!-- Spacer -->
            <Separator Height="28" Background="Transparent"/>

            <!-- Arrow pad: up, left/down/right -->
            <StackPanel Orientation="Vertical" Spacing="4" HorizontalAlignment="Center" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center">
                    <Button Classes="key-op" Content="↑" Click="KeyButton_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="5" HorizontalAlignment="Center">
                    <Button Classes="key-op" Content="←" Click="KeyButton_Click"/>
                    <Button Classes="key-op" Content="↓" Click="KeyButton_Click"/>
                    <Button Classes="key-op" Content="→" Click="KeyButton_Click"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </StackPanel>
    </Viewbox>
    <Window.Styles>
        <!-- Standard key -->
        <Style Selector="Button.key-std">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>
        
        <!-- Function key (smaller) -->
        <Style Selector="Button.key-fn">
            <Setter Property="Width" Value="68"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Big key (Tab, Caps, Shift, Backspace) -->
        <Style Selector="Button.key-big">
            <Setter Property="Width" Value="70"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Tab key -->
        <Style Selector="Button.key-tab">
            <Setter Property="Width" Value="98"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Caps Lock key -->
        <Style Selector="Button.key-caps">
            <Setter Property="Width" Value="120"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Shift key -->
        <Style Selector="Button.key-shift">
            <Setter Property="Width" Value="173"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Backspace key -->
        <Style Selector="Button.key-backspace">
            <Setter Property="Width" Value="140"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Backslash key -->
        <Style Selector="Button.key-backslash">
            <Setter Property="Width" Value="107"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Enter key (extra big) -->
        <Style Selector="Button.key-big-enter">
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Enter key -->
        <Style Selector="Button.key-enter">
            <Setter Property="Width" Value="155"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Control key (Ctrl, Win, Alt, etc.) -->
        <Style Selector="Button.key-ctrl">
            <Setter Property="Width" Value="82"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Spacebar -->
        <Style Selector="Button.key-space">
            <Setter Property="Width" Value="441"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Navigation keys (PS, SL, PB, etc.) - match standard key sizes/colors -->
        <Style Selector="Button.key-nav">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Operator / Arrow keys - same as standard keys -->
        <Style Selector="Button.key-op">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Wide operator key (if used) - span of two standard keys + spacing -->
        <Style Selector="Button.key-op-wide">
            <Setter Property="Width" Value="135"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Background" Value="#0066cc"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#005599"/>
        </Style>

        <!-- Center text on all buttons -->
        <Style Selector="Button">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Disable hover effect on buttons -->
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}"/>
        </Style>

        <!-- Subtle pressed effect on buttons -->
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="#005099"/>
        </Style>

    </Window.Styles>

</Window>

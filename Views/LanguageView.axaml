<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="GetStartedApp.Views.LanguageView"
        Title="JÄ™zyk / Language"
        Background="#2C3E50"
        WindowStartupLocation="CenterScreen"
        Width="700" Height="500">

    <Grid RowDefinitions="Auto,*,Auto" Margin="40">
        <!-- Title -->
        <TextBlock x:Name="TitleText"
                   Grid.Row="0"
                   Text="Wybierz JÄ™zyk" 
                   FontSize="36" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,40"/>

        <!-- Content -->
        <StackPanel Grid.Row="1" 
                    Spacing="30" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            
            <!-- Polish Button -->
            <Button x:Name="PolishButton"
                    Width="500" 
                    Height="120"
                    Background="#2C3E50"
                    BorderBrush="#3498DB"
                    BorderThickness="3"
                    CornerRadius="10"
                    Click="PolishButton_Click"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Spacing="20">
                    <TextBlock Text="ðŸ‡µðŸ‡±" 
                               FontSize="48"
                               VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Polski" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Polish Language" 
                                   FontSize="16"
                                   Foreground="#BDC3C7"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Button>

            <!-- English Button -->
            <Button x:Name="EnglishButton"
                    Width="500" 
                    Height="120"
                    Background="#2C3E50"
                    BorderBrush="#7F8C8D"
                    BorderThickness="3"
                    CornerRadius="10"
                    Click="EnglishButton_Click"
                    HorizontalContentAlignment="Left"
                    Cursor="Hand">
                <StackPanel Orientation="Horizontal" Margin="30,0,0,0" Spacing="20">
                    <TextBlock Text="ðŸ‡¬ðŸ‡§" 
                               FontSize="48"
                               VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="English" 
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="English Language" 
                                   FontSize="16"
                                   Foreground="#BDC3C7"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Save Button -->
        <Button x:Name="SaveButtonControl"
                Grid.Row="2"
                Width="300" 
                Height="60"
                Content="ZAPISZ"
                FontSize="24"
                FontWeight="Bold"
                Background="#27AE60"
                Foreground="White"
                CornerRadius="10"
                HorizontalAlignment="Center"
                Click="SaveButton_Click"
                Cursor="Hand"/>
    </Grid>

    <Window.Styles>
        <Style Selector="Button:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}"/>
        </Style>
        <Style Selector="Button:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="{TemplateBinding Background}"/>
        </Style>
    </Window.Styles>

</Window>
